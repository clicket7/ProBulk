<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamprobulk.probulk.probulk.ModActivity"
    >


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextCount"
            android:gravity="center_vertical|center"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
            android:text="@string/addBulkPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_below="@+id/editTextCount"
            android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
            android:text="@string/modBulk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonInfoAdd"
            android:layout_above="@+id/buttonInfoUpd"
            android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="modBulkData" />

    <Button
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBackMod"
        android:onClick="modStop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="@string/addBulkPriceOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/editTextCooked"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:text="@string/deleteBulk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonInfoUpd"
        android:layout_above="@+id/buttonBackMod"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="deleteBulkData" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextOldPrice"
        android:gravity="center_vertical|center"
        android:text="0"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCooked"
        android:gravity="center_vertical|center"
        android:text="0"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerNames"
        android:spinnerMode="dialog"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center|start"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="@string/bulkID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/buttonBackMod"
        android:layout_alignBottom="@+id/buttonBackMod"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewId"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:text="@string/salesBulkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/editTextCount"
        android:layout_alignParentEnd="true"
        android:onClick="reloadSpinner" />

    <TextView
            android:text="@string/addBulkCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/spinnerNames"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editTextOldPrice"
        android:layout_centerHorizontal="true" />


</RelativeLayout>