<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamprobulk.probulk.probulk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/rtulogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamprobulk.probulk.probulk.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamprobulk.probulk.probulk.AddActivity"
            android:label="@string/addBulkLabel"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.teamprobulk.probulk.probulk.ForecastActivity"
            android:label="@string/forecastBulkLabel"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <!--
             android:configChanges="keyboardHidden|orientation|screenSize"
             android:windowSoftInputMode="adjustPan|adjustResize|stateHidden"
        -->
        <activity
            android:name="com.teamprobulk.probulk.probulk.ModActivity"
            android:label="@string/modBulk"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.teamprobulk.probulk.probulk.SaleActivity"
            android:label="@string/sales"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.teamprobulk.probulk.probulk.ModSaleActivity"
            android:label="@string/salesmod"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name="com.teamprobulk.probulk.probulk.TableActivity" />
    </application>

</manifest>